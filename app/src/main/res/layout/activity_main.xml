<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constLyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtUser"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginBottom="416dp"
        android:background="@drawable/style_edit_text"
        android:backgroundTint="#51777A"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textPersonName"
        android:shadowColor="#000000"
        android:textColor="#050505"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btnLogIn"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="321dp"
        android:layout_height="70dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="46dp"
        android:backgroundTint="#81D30F"
        android:fontFamily="monospace"
        android:foregroundTint="#4CAF50"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="5"
        android:text="INICIO SESION"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_secure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtpass"
        app:strokeColor="#4CAF50" />

    <EditText
        android:id="@+id/txtpass"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:layout_marginBottom="324dp"
        android:background="@drawable/style_edit_text"
        android:backgroundTint="#5F886D"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textPersonName"
        android:password="true"
        android:shadowColor="#000000"
        android:textColor="#0C0C0C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="285dp"
        android:layout_height="98dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="56dp"
        android:text="BIENVENIDO A MI EMPRESA"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="66dp"
        android:layout_height="27dp"
        android:text="User"
        android:textColor="#0C0C0C"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="98dp"
        android:layout_height="30dp"
        android:text="ContraseÃ±a"
        android:textColor="#101010"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

</androidx.constraintlayout.widget.ConstraintLayout>